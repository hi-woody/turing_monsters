
{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false, 
    "forceConsistentCasingInFileNames": true,
    "noEmit": false, // change from true
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react", // changed from preserve
    // "outDir": "dist/", // aded
    "sourceMap": true, // added
  },
  "exclude": [
    "node_modules",
    // "dist", // added
    // "src/sprites",
    // "src/sprites/background"
  ],
  "include": [
    // "next-env.d.ts", // removed, coz next config won't be use 
    "**/*.ts",
    "**/*.tsx"
, "src/index.js"  ]
}
